@model IEnumerable<EziBuy.Models.ProductCategory>

@*this is the shared partial view that is used to display the particular portion
    of webpage or the portion that is used at several different webpages
        this view display the vertical product category bar*@

<nav class="col-md-3" id="leftVerticalBar">
    <ul class="nav nav-pills nav-stacked">
        <li></li>
        <li><h2>CATEGORIES</h2></li>
        @foreach (var item in Model)
        {
            <li>@Html.ActionLink(item.CategoryName, "BrowseCategoryProduct", new { categoryId = item.Id })</li>            
        }
    </ul>
</nav>


