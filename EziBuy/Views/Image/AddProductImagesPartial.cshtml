@model EziBuy.Models.ProductViewModel

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<div>
    <form action="/Image/AddProductImages" method="post" enctype="multipart/form-data">

        @Html.ValidationSummary(true, "", new { @class = "text-danger", @ShowMessageBox = "True" })      

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.ImageUpload, new { type = "file" })
                @Html.ValidationMessageFor(model => model.ImageUpload, "")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.DropDownListFor(model => model.ProductId, new SelectList(ViewBag.ProductDetails, "Id", "ProductName"), "Choose Product Category", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductId, "")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="New Product Image" class="btn btn-success" />
            </div>
        </div>
    </form>

</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

