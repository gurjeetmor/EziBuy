@model IEnumerable<EziBuy.Models.ProductImage>

@{
    ViewBag.Title = "DisplayProductImage";
}

<h2>Product Image</h2>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<a href="#" class="btn btn-success" onclick="AddNewProductImage()">Add New Product Image</a>
<div class="container" style="width:100%; margin-top:2%; text-align:center">

    <table class="table table-responsive">
        <tr>  
            
            <td></td>           
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th></th>
            <th></th>
        </tr>
        @if (ViewBag.ImageList != null)
        {
            foreach (var item in Model)
            {
        <tr id="row_@item.Id">
            <td>
                <a href="#" class="btn btn-danger" title="Edit Product Image" onclick="EditProductImage(@item.Id)"><i class="glyphicon glyphicon-edit"></i></a>
            </td>

            <td>@Html.DisplayFor(modelItem => item.ImageUrl)</td>
            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            @*<td>
            <a href="#" title="Edit Product Information" class="btn btn-success" onclick="EditProductDetail(@item.Id)"><i class="glyphicon glyphicon-pencil"></i></a>
        </td>*@
            <td>
                <a href="#" title="Delete Product Image" class="btn btn-danger" onclick="ConfirmDelete(@item.Id)"><i class="glyphicon glyphicon-trash"></i></a>
            </td>

        </tr>
            }
        }
    </table>
    <input type="hidden" id="hiddenProductImageId" />

    @*Modal to Delete the Product Detail from Product Detail List*@
    <div class="modal fade" id="myModalDelete">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h3 class="modal-title">Delete</h3>
                </div>
                <div class="modal-body">
                    <h4> Are you sure to delete this record ?</h4>
                    <div style="text-align:center; display:none" id="loaderDiv">
                        <img src="~/Content/InternetSlowdown_Day[1].gif" width="150" />
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a href="#" class="btn btn-success" onclick="DeleteProductImage()">Confirm Delete</a>

                </div>
            </div>
        </div>
    </div>
</div>

@*Script to Delete the Product Detail from Product Detail List*@
<script>
    var ConfirmDelete = function (productImageId) {
        $("#hiddenProductImageId").val(productImageId);
        $("#myModalDelete").modal("show");
    }
    var DeleteProductImage = function () {

        $("#loaderDiv").show();
        var productImage_Id = $("#hiddenProductImageId").val();

        $.ajax({
            type: "Post",
            url: "/Image/DeleteProductImage",
            data: { productImageId: productImage_Id },
            success: function () {

                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                $("#row_" + productImage_Id).remove();
                window.location.href = "/Image/DisplayProductImages";
            }
        })
    }
</script>

